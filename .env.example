# Port number
PORT=3000

# URL of the Mongo DB
MONGODB_URL=mongodb://127.0.0.1:27017/your-db-name

# JWT
# JWT secret key
JWT_SECRET=your-jwt-secret
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=your-access-token-expiration
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=your-refresh-token-expiration
# Number of minutes after which a reset password token expires
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=your-reset-password-token-expiration
# Number of minutes after which a verify email token expires
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=yout-verify-email-token-expiration

# SMTP configuration options for the email service
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=email-server
SMTP_PORT=587
SMTP_USERNAME=email-server-username
SMTP_PASSWORD=email-server-password
EMAIL_FROM=support@yourapp.com

# Discord
DISCORD_TOKEN="your-discord-token"

# Environment
NODE_ENV="your-environment"